<div class="container mt-5 mb-5">
  <div class="card mb3">
    <div class="card-header d-flex">
      <a class="iconplus fas fa-expand-arrows-alt"></a>
        <%= cl_image_tag(@item.picture.key, alt: 'picture', :id => "imgshow", sign_url: true) %>
    </div>
    <div class="card-body list-group-item">
      <div class="row">
        <div class="col-8" id="section">
          <h4><%= @item.title %></h4>
          <p><%= @item.description %></p>
        </div>
        <div class="col-4">
          <h4>Prix: <%= @item.price %> â‚¬</h4>
            <div class="form-group">

              <% if user_signed_in? %>
                <%= link_to "Ajouter au panier", cart_item_join_index_path(item_id: @item), method: :create, class: "btn btn-secondary btn-lg btn-block" %>
              <% else %>
                <%= link_to "Ajouter au panier", new_user_session_path, class: "btn btn-secondary btn-lg btn-block" %>
              <% end %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>
