          <div class="form-group">
            <%= label_tag :description %>
            <%= text_area_tag :description, nil, class: 'form-control', required: true %>
          </div>
            <br />
          <div class="form-group">
            <%= label_tag :price%>
            <%= number_field_tag :price, nil, class: 'form-control',required: true, placeholder: 'â‚¬' %>
          </div>
            <br />
          <div class="form-group">
            <p>Charger la photo</p>
              <%= file_field_tag :picture, required: true, direct_upload: true %><br>
          </div>
            <br />
          <div class="actions mt-5">
            <%= submit_tag "Create Item", class: 'btn btn-primary' %>
          </div>
            <br />
          <% end %>
        </div>
      </div>
    </div>
