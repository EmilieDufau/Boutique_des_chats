<div class="container-fluid">
  <div class="row">


    <%= render "admin/sidebar"  %>


    <div class="container border rounded py-3 bg-white mt-5 col-7 mb-5">
      <div class="row d-flex align-items-center justify-content-center">
        <div class="col-md-6 text-center">
          <%= image_tag @item.picture, alt: 'picture', :class => "img-fluid rounded" %>
        </div>
        <div class="col-md-6">
          <br><br>

          <h1 class="h3 font-weight-normal text-center">Modifier</h1>

          <%= form_for(@item, url: admin_item_path(@item), html: { method: :put }) do |f| %>

          <div class="form-group">
            <%= f.label :title, "Titre" %><br />
            <%= f.text_field :title, autofocus: true, autocomplete: "title",  class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :description %><br />
            <%= f.text_field :description, autofocus: true, autocomplete: "description",  class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :price, "Prix" %><br />
            <%= f.number_field :price, class: 'form-control',required: true, placeholder: '€' %>
          </div>
          <div class="actions mt-5">
            <%= f.submit "Mettre à jour", class: "btn btn-primary btn-block" %>
          </div>
          <% end %>
          <hr>
          <%= link_to "Retour", :back %>
        </div>
      </div>
    </div>
  </div>
</div>

