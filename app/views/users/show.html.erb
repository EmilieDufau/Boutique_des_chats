<div class="container mt-5 mb-5">
	<h1>Mon profil</h1>
	<p>Votre profil est lié à votre adresse email  : <%= current_user.email %></p>

	<%= link_to "Editer mon profil", edit_user_registration_path, class:"btn btn-secondary" %>


	<div class="container mt-5 mb-5">
		<div class="row">
			<div class="col-lg-12">

				<% if @orders.empty? %>
					<div class="page-section clearfix">
						<div class="intro-text text-center bg-faded p-5 rounded ">
          		<h2 class="section-heading mb-4">Votre liste d'achats</h2>
          		<p class="mb-3">Vous n'avez pas encore passé de commandes!</p>
          		<br>
          		<div class="intro-button mx-auto">
            		<a class="btn btn-primary btn-xl" href="<%=root_path %>">Voir les photos</a>
          		</div>
        		</div>
							<img class="img-fluid rounded mx-auto d-block" src="https://images.unsplash.com/photo-1586223604555-7fdedc288185?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1351&q=80" alt="cat"  style="width: 700px; height: auto;" >
					</div>

				<% else %>
				<h2>Votre liste d'achats</h2>
					<div class="bs-component">
						<% @orders.each do |order| %>
						<table class="table table-hover table-active">
  						<thead>
    						<tr>
      						<th scope="col">Titre</th>
      						<th scope="col">description</th>
      						<th scope="col">prix</th>
      						<th scope="col">Image(s)</th>
    						</tr>
  						</thead>

  						<tbody>
   			 				<% order.items.each do |item|%>
    							<tr class="table-light">
      							<th scope="row"><%= item.title %></th>
      							<td><%= item.description %></td>
      							<td><%= item.price %></td>
      							<td><img src="<%= item.image_url%>" class="img-thumbnail" alt="chat" width="60"></td>
									</tr>
									<br>
								<%end%>
  						</tbody>
						</table>
						<%end%> 
					</div>
				<% end %>

			</div>
		</div>
	</div>


</div>